{% extends 'base.html.twig' %}

{% block title %}{{ 'My Profile'|trans }}{% endblock %}

{% block body %}
<div class="container py-4">
    {# Back Button #}
    <div class="mb-3">
        <a href="{{ path('app_home') }}" class="btn btn-sm btn-outline-secondary">
            <i class="bi bi-arrow-left"></i>
            {{ 'Back to Home'|trans }}
        </a>
    </div>

    {# Page Header #}
    <div class="mb-4">
        <h1>
            <i class="bi bi-person-circle text-primary"></i>
            {{ 'My Profile'|trans }}
        </h1>
        <p class="text-muted">
            <i class="bi bi-envelope"></i>
            {{ user.email }}
        </p>
    </div>

    {# Form Card #}
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="bi bi-pencil"></i>
                {{ 'Edit Profile Information'|trans }}
            </h5>
        </div>
        <div class="card-body">
            {{ include('user/_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
