{% extends 'base.html.twig' %}

{% block title %}Admin - All Tickets{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Admin - All Tickets (All Organizations)</h1>
            <div class="d-flex gap-2">
                <a href="{{ path('app_admin_time_entries') }}" class="btn btn-primary">
                    <i class="bi bi-clock-history me-1"></i>
                    Time Entries
                </a>
                {% if includeResolved %}
                    <a href="{{ path('app_admin_index') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-eye-slash me-1"></i>
                        Hide Resolved
                    </a>
                {% else %}
                    <a href="{{ path('app_admin_index', {'resolved': true}) }}" class="btn btn-outline-secondary">
                        <i class="bi bi-eye me-1"></i>
                        Show Resolved
                    </a>
                {% endif %}
            </div>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Organization</th>
                    <th>Title</th>
                    <th>Status</th>
                    <th>Priority</th>
                    <th>Created By</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for ticket in tickets %}
                <tr>
                    <td>{{ ticket.id }}</td>
                    <td>
                        <span class="badge bg-info">{{ ticket.organization.name }}</span>
                    </td>
                    <td>{{ ticket.title }}</td>
                    <td>
                        <span class="badge bg-primary">{{ ticket.status.name }}</span>
                    </td>
                    <td>
                        <span class="badge priority-{{ ticket.priority.level }}">{{ ticket.priority.name }}</span>
                    </td>
                    <td>{{ ticket.createdBy.name }}</td>
                    <td>{{ ticket.createdAt|date('M d, Y H:i') }}</td>
                    <td>
                        <a href="{{ path('app_ticket_show', {
                            'organizationSlug': ticket.organization.slug,
                            'ticketId': ticket.id
                        }) }}" class="btn btn-sm btn-primary">
                            <i class="bi bi-eye"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8" class="text-center">No tickets found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
