{% extends 'base.html.twig' %}

{% block title %}{{ 'Admin'|trans }} - {{ 'All Tickets'|trans }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>{{ 'Admin'|trans }} - {{ 'All Tickets (All Organizations)'|trans }}</h1>
            <div>
                {% if includeResolved %}
                    <a href="{{ path('app_admin_index') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-eye-slash me-1"></i>
                        {{ 'Hide Resolved'|trans }}
                    </a>
                {% else %}
                    <a href="{{ path('app_admin_index', {'resolved': true}) }}" class="btn btn-outline-secondary">
                        <i class="bi bi-eye me-1"></i>
                        {{ 'Show Resolved'|trans }}
                    </a>
                {% endif %}
            </div>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>{{ 'ID'|trans }}</th>
                    <th>{{ 'Organization'|trans }}</th>
                    <th>{{ 'Title'|trans }}</th>
                    <th>{{ 'Status'|trans }}</th>
                    <th>{{ 'Priority'|trans }}</th>
                    <th>{{ 'Created By'|trans }}</th>
                    <th>{{ 'Created At'|trans }}</th>
                    <th>{{ 'Actions'|trans }}</th>
                </tr>
            </thead>
            <tbody>
            {% for ticket in tickets %}
                <tr>
                    <td>{{ ticket.id }}</td>
                    <td>
                        <span class="badge bg-info">{{ ticket.organization.name }}</span>
                    </td>
                    <td>{{ ticket.title }}</td>
                    <td>
                        <span class="badge bg-primary">{{ ticket.status.name|trans }}</span>
                    </td>
                    <td>
                        <span class="badge priority-{{ ticket.priority.level }}">{{ ticket.priority.name|trans }}</span>
                    </td>
                    <td>{{ ticket.createdBy.name }}</td>
                    <td>{{ ticket.createdAt|date('M d, Y H:i') }}</td>
                    <td>
                        <a href="{{ path('app_ticket_show', {
                            'organizationSlug': ticket.organization.slug,
                            'ticketId': ticket.id
                        }) }}" class="btn btn-sm btn-primary">
                            <i class="bi bi-eye"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8" class="text-center">{{ 'No tickets found'|trans }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
