{% extends 'base.html.twig' %}

{% block title %}Admin - All Tickets{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Admin - All Tickets (All Organizations)</h1>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Organization</th>
                    <th>Title</th>
                    <th>Status</th>
                    <th>Created By</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for ticket in tickets %}
                <tr>
                    <td>{{ ticket.id }}</td>
                    <td>
                        <span class="badge bg-info">{{ ticket.organization.name }}</span>
                    </td>
                    <td>{{ ticket.title }}</td>
                    <td>
                        <span class="badge bg-secondary">{{ ticket.status.name }}</span>
                    </td>
                    <td>{{ ticket.createdBy.email }}</td>
                    <td>{{ ticket.createdAt|date('d/m/Y H:i') }}</td>
                    <td>
                        <a href="{{ path('app_ticket_show', {
                            'organizationSlug': ticket.organization.slug,
                            'ticketId': ticket.id
                        }) }}" class="btn btn-sm btn-primary">View</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="text-center">No tickets found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
