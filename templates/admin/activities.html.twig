{% extends 'base.html.twig' %}

{% block title %}{{ 'Activities'|trans }} - {{ 'Admin'|trans }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    {# Header #}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>
                <i class="bi bi-clock-history"></i>
                {{ 'All Activities'|trans }}
            </h2>
            <p class="text-muted mb-0">{{ 'View all activities across all organizations'|trans }}</p>
        </div>
        <a href="{{ path('app_admin_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i>
            {{ 'Back to Admin'|trans }}
        </a>
    </div>

    {# Summary Cards #}
    <div class="row g-3 mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted mb-2">{{ 'Total Entries'|trans }}</h6>
                    <h3 class="mb-0">{{ totalEntries }}</h3>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted mb-2">{{ 'Total Hours'|trans }}</h6>
                    <h3 class="mb-0">{{ totalHours|number_format(2) }}h</h3>
                </div>
            </div>
        </div>
    </div>

    {# Activities Grouped by Month #}
    {% if activitiesByMonth|length > 0 %}
        {% for monthKey, monthData in activitiesByMonth %}
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-calendar3"></i>
                            {{ monthData.label }}
                        </h5>
                        <div class="text-end">
                            <span class="badge bg-primary">
                                {{ monthData.totalHours|number_format(2) }}h
                            </span>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>{{ 'Date'|trans }}</th>
                                    <th>{{ 'Ticket'|trans }}</th>
                                    <th>{{ 'Organization'|trans }}</th>
                                    <th>{{ 'Description'|trans }}</th>
                                    <th class="text-end">{{ 'Hours'|trans }}</th>
                                    <th>{{ 'Logged By'|trans }}</th>
                                    <th class="text-center">{{ 'Actions'|trans }}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for entry in monthData.entries %}
                                    <tr>
                                        <td>
                                            <i class="bi bi-calendar"></i>
                                            {{ entry.workDate|date('M d, Y') }}
                                        </td>
                                        <td>
                                            <a href="{{ path('app_ticket_show', {
                                                'organizationSlug': entry.organization.slug,
                                                'ticketId': entry.ticket.id
                                            }) }}">
                                                #{{ entry.ticket.id }}
                                            </a>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">
                                                {{ entry.organization.name }}
                                            </span>
                                        </td>
                                        <td>
                                            <div style="max-width: 300px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                                {{ entry.description }}
                                            </div>
                                        </td>
                                        <td class="text-end">
                                            <span class="badge bg-primary">{{ entry.hours|number_format(2) }}h</span>
                                        </td>
                                        <td>
                                            <i class="bi bi-person-circle"></i>
                                            {{ entry.createdBy.name }}
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group btn-group-sm">
                                                <a href="{{ path('app_activity_edit', {
                                                    'organizationSlug': entry.organization.slug,
                                                    'ticketId': entry.ticket.id,
                                                    'activityId': entry.id
                                                }) }}" class="btn btn-outline-secondary" title="{{ 'Edit'|trans }}">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% else %}
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-clock-history text-muted" style="font-size: 4rem;"></i>
                <p class="text-muted mt-3 mb-0">{{ 'No activities found.'|trans }}</p>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
