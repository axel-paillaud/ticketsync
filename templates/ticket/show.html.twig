{% extends 'base.html.twig' %}

{% block title %}Ticket{% endblock %}

{% block body %}
    <h1>Ticket</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ticket.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ ticket.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ ticket.description }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ ticket.createdAt ? ticket.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ ticket.updatedAt ? ticket.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    {# Attachments section #}
    {% if ticket.attachments|length > 0 %}
        <hr>
        <h2>Pièces jointes ({{ ticket.attachments|length }})</h2>

        <div class="row">
            {% for attachment in ticket.attachments %}
                <div class="col-md-4 mb-3">
                    <div class="card">
                        {% if app.user == attachment.uploadedBy %}
                            <div class="position-absolute top-0 end-0 p-2">
                                <form method="post" action="{{ path('app_attachment_delete', {
                                    'ticketId': ticket.id,
                                    'attachmentId': attachment.id
                                }) }}" style="display: inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete-attachment-' ~ attachment.id) }}">
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette pièce jointe ?')" title="Supprimer">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        {% endif %}
                        {% if attachment.isImage %}
                            {# Afficher l'image directement #}
                            <a href="{{ path('app_attachment_download', {
                                'ticketId': ticket.id,
                                'attachmentId': attachment.id
                            }) }}" target="_blank">
                                <img src="{{ path('app_attachment_download', {
                                    'ticketId': ticket.id,
                                    'attachmentId': attachment.id
                                }) }}" class="card-img-top" alt="{{ attachment.filename }}" style="max-height: 200px; object-fit: cover;">
                            </a>
                        {% else %}
                            <div class="card-body text-center bg-light" style="min-height: 200px; display: flex; align-items: center; justify-content: center;">
                                <div>
                                    {% if attachment.mimeType starts with 'application/pdf' %}
                                        <i class="bi bi-file-pdf" style="font-size: 4rem; color: #dc3545;"></i>
                                    {% elseif attachment.mimeType starts with 'application/vnd.ms-excel' or attachment.mimeType starts with 'application/vnd.openxmlformats-officedocument.spreadsheetml' %}
                                        <i class="bi bi-file-excel" style="font-size: 4rem; color: #28a745;"></i>
                                    {% elseif attachment.mimeType starts with 'application/msword' or attachment.mimeType starts with 'application/vnd.openxmlformats-officedocument.wordprocessingml' %}
                                        <i class="bi bi-file-word" style="font-size: 4rem; color: #007bff;"></i>
                                    {% elseif attachment.mimeType starts with 'application/zip' or attachment.mimeType starts with 'application/x-' %}
                                        <i class="bi bi-file-zip" style="font-size: 4rem; color: #6c757d;"></i>
                                    {% elseif attachment.mimeType starts with 'text/' %}
                                        <i class="bi bi-file-text" style="font-size: 4rem; color: #17a2b8;"></i>
                                    {% else %}
                                        <i class="bi bi-file-earmark" style="font-size: 4rem; color: #6c757d;"></i>
                                    {% endif %}
                                </div>
                            </div>
                        {% endif %}

                        <div class="card-body">
                            <h6 class="card-title text-truncate" title="{{ attachment.filename }}">
                                {{ attachment.filename }}
                            </h6>
                            <p class="card-text">
                                <small class="text-muted">
                                    {{ attachment.formattedSize }}<br>
                                    Uploadé le {{ attachment.uploadedAt|date('d/m/Y à H:i') }}
                                    {% if attachment.uploadedBy %}
                                        <br>par {{ attachment.uploadedBy.email }}
                                    {% endif %}
                                </small>
                            </p>
                            <a href="{{ path('app_attachment_download', {
                                'ticketId': ticket.id,
                                'attachmentId': attachment.id
                            }) }}" class="btn btn-sm btn-primary w-100" download>
                                <i class="bi bi-download"></i> Télécharger
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}

    {# Comment section #}
    <hr>
    <h2>Commentaires ({{ ticket.comments|length }})</h2>

    {% if ticket.comments|length > 0 %}
        <div class="comments-list">
            {% for comment in ticket.comments %}
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <h6 class="card-subtitle mb-2 text-muted">
                                Par {{ comment.author.email }} - {{ comment.createdAt|date('d/m/Y à H:i') }}
                            </h6>
                            {% if comment.updatedAt > comment.createdAt %}
                                <small class="text-muted">(modifié le {{ comment.updatedAt|date('d/m/Y à H:i') }})</small>
                            {% endif %}

                            {% if app.user == comment.author %}
                                <div>
                                    <a href="{{ path('app_comment_edit', {
                                        'ticketId': ticket.id,
                                        'commentId': comment.id
                                    }) }}" class="btn btn-sm btn-warning">
                                        Modifier
                                    </a>
                                    <form method="post" action="{{ path('app_comment_delete', {
                                        'ticketId': ticket.id,
                                        'commentId': comment.id
                                    }) }}" style="display: inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete-comment-' ~ comment.id) }}">
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce commentaire ?')">
                                            Supprimer
                                        </button>
                                    </form>
                                </div>
                            {% endif %}
                        </div>
                        <p class="card-text">{{ comment.content|nl2br }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p class="text-muted">Aucun commentaire pour le moment.</p>
    {% endif %}

    {# Comment form #}
    <div class="mt-4">
        <h3>Ajouter un commentaire</h3>
        {{ form_start(commentForm) }}
            {{ form_row(commentForm.content) }}
            <button type="submit" class="btn btn-primary">Envoyer</button>
        {{ form_end(commentForm) }}
    </div>

    <a href="{{ path('app_ticket_index') }}">back to list</a>

    <a href="{{ path('app_ticket_edit', {'id': ticket.id}) }}">edit</a>

    {{ include('ticket/_delete_form.html.twig') }}
{% endblock %}
