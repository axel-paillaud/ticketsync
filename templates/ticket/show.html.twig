{% extends 'base.html.twig' %}

{% block title %}Ticket #{{ ticket.id }} - {{ ticket.title }}{% endblock %}

{% block body %}
<div class="container py-4">
    {# Back Button #}
    <div class="mb-3">
        <a href="{{ path('app_ticket_index', {'organizationSlug': ticket.organization.slug}) }}" class="btn btn-sm btn-outline-secondary">
            <i class="bi bi-arrow-left"></i>
            {{ 'Back to Tickets'|trans }}
        </a>
    </div>

    {# Ticket Header #}
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div>
                <h2 class="mb-0">
                    <span class="badge bg-primary me-2">#{{ ticket.id }}</span>
                    {{ ticket.title }}
                </h2>
            </div>
            <div class="btn-group">
                {% if is_granted('TICKET_EDIT', ticket) %}
                    <a href="{{ path('app_ticket_edit', {'organizationSlug': ticket.organization.slug, 'ticketId': ticket.id}) }}"
                       class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-pencil"></i>
                        {{ 'Edit'|trans }}
                    </a>
                {% endif %}
                {% if is_granted('TICKET_DELETE', ticket) %}
                    <button type="button" class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="bi bi-trash"></i>
                        {{ 'Delete'|trans }}
                    </button>
                {% endif %}
            </div>
        </div>
        <div class="card-body">
            {# Metadata Grid #}
            <div class="row g-3 mb-3">
                <div class="col-md-3">
                    <div class="info-box">
                        <div class="info-label">{{ 'Status'|trans }}</div>
                        <div class="info-value">
                            <span class="badge bg-primary">
                                <i class="bi bi-flag-fill"></i>
                                {{ ticket.status.name|trans }}
                            </span>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="info-box">
                        <div class="info-label">{{ 'Priority'|trans }}</div>
                        <div class="info-value">
                            <span class="badge priority-{{ ticket.priority.level }}">
                                <i class="bi bi-exclamation-triangle-fill"></i>
                                {{ ticket.priority.name|trans }}
                            </span>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="info-box">
                        <div class="info-label">{{ 'Created By'|trans }}</div>
                        <div class="info-value">
                            <i class="bi bi-person-circle"></i>
                            {{ ticket.createdBy.name }}
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="info-box">
                        <div class="info-label">{{ 'Created At'|trans }}</div>
                        <div class="info-value">
                            <i class="bi bi-calendar"></i>
                            {{ ticket.createdAt|date('M d, Y H:i') }}
                        </div>
                    </div>
                </div>
            </div>

            {# Description #}
            <div class="description-section">
                <h5 class="mb-2">
                    <i class="bi bi-file-text"></i>
                    {{ 'Description'|trans }}
                </h5>
                <div class="description-content">
                    {{ ticket.description|markdown_to_html|raw }}
                </div>
            </div>
        </div>
    </div>

    {# Attachments Section #}
    {% if ticket.attachments|length > 0 %}
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-paperclip"></i>
                    {{ 'Attachments'|trans }} ({{ ticket.attachments|length }})
                </h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    {% for attachment in ticket.attachments %}
                        {% include 'attachment/_attachment_card.html.twig' with {
                            'attachment': attachment,
                            'ticketId': ticket.id,
                            'size': 'large'
                        } %}
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}

    {# Activities Section (Admin only) #}
    {% if is_granted('ROLE_ADMIN') %}
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-clock-history"></i>
                    {{ 'Time Tracking'|trans }}
                </h5>
                <a href="{{ path('app_activity_new', {
                    'organizationSlug': ticket.organization.slug,
                    'ticketId': ticket.id
                }) }}" class="btn btn-sm btn-primary">
                    <i class="bi bi-plus-circle"></i>
                    {{ 'Add Activity'|trans }}
                </a>
            </div>
            <div class="card-body">
                {% include 'activity/_activity_list.html.twig' with {'ticket': ticket} %}
            </div>
        </div>
    {% endif %}

    {# Comments Section #}
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="bi bi-chat-left-text"></i>
                {{ 'Comments'|trans }}
            </h5>
        </div>
        <div class="card-body">
            {% include 'comment/_comment_list.html.twig' with {'ticket': ticket} %}
        </div>
    </div>

    {# Add Comment Form #}
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="bi bi-plus-circle"></i>
                {{ 'Add Comment'|trans }}
            </h5>
        </div>
        <div class="card-body">
            {% include 'comment/_comment_form.html.twig' with {'commentForm': commentForm} %}
        </div>
    </div>
</div>

{# Delete Modal #}
{% if is_granted('TICKET_DELETE', ticket) %}
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{ 'Delete Ticket'|trans }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>{{ 'Are you sure you want to delete this ticket?'|trans }}</p>
                <p class="text-danger mb-0">
                    <i class="bi bi-exclamation-triangle"></i>
                    {{ 'This action cannot be undone.'|trans }}
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ 'Cancel'|trans }}</button>
                {{ include('ticket/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endif %}
{% endblock %}
