<form method="post" action="{{ path('app_ticket_delete', {'organizationSlug': currentOrganization.slug, 'ticketId': ticket.id}) }}" onsubmit="return confirm('{{ 'Are you sure you want to delete this item?'|trans }}');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ticket.id) }}">
    <button class="btn">{{ 'Delete'|trans }}</button>
</form>
