{% extends 'base.html.twig' %}

{% block title %}Tickets - {{ currentOrganization.name }}{% endblock %}

{% block body %}
<div class="container py-4">
    {# Page Header #}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-1">
                <i class="bi bi-ticket-perforated text-primary"></i>
                Tickets
            </h1>
            <p class="text-muted mb-0">
                <i class="bi bi-building"></i>
                {{ currentOrganization.name }}
            </p>
        </div>
        <a href="{{ path('app_ticket_new', {'organizationSlug': currentOrganization.slug}) }}" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>
            New Ticket
        </a>
    </div>

    {% if tickets|length > 0 %}
        {# Tickets Grid #}
        <div class="row g-3">
            {% for ticket in tickets %}
                <div class="col-12">
                    <div class="card ticket-card">
                        <div class="card-body">
                            <div class="row align-items-center">
                                {# Ticket ID Badge #}
                                <div class="col-auto">
                                    <div class="ticket-id-badge">
                                        #{{ ticket.id }}
                                    </div>
                                </div>

                                {# Ticket Info #}
                                <div class="col">
                                    <h5 class="card-title mb-1">
                                        <a href="{{ path('app_ticket_show', {'organizationSlug': currentOrganization.slug, 'ticketId': ticket.id}) }}" class="text-decoration-none">
                                            {{ ticket.title }}
                                        </a>
                                    </h5>
                                    <p class="card-text text-muted mb-2 ticket-description">
                                        {{ ticket.description|length > 100 ? ticket.description|slice(0, 100) ~ '...' : ticket.description }}
                                    </p>
                                    <div class="d-flex gap-2 flex-wrap">
                                        <span class="badge bg-primary">
                                            <i class="bi bi-flag-fill"></i>
                                            {{ ticket.status.name }}
                                        </span>
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-exclamation-triangle-fill"></i>
                                            {{ ticket.priority.name }}
                                        </span>
                                        {% if ticket.assignedTo %}
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-person-fill"></i>
                                                {{ ticket.assignedTo.name }}
                                            </span>
                                        {% endif %}
                                    </div>
                                </div>

                                {# Metadata & Actions #}
                                <div class="col-auto text-end">
                                    <div class="text-muted small mb-2">
                                        <div>
                                            <i class="bi bi-person"></i>
                                            {{ ticket.createdBy.name }}
                                        </div>
                                        <div>
                                            <i class="bi bi-clock"></i>
                                            {{ ticket.createdAt|date('M d, Y') }}
                                        </div>
                                    </div>
                                    <div class="btn-group btn-group-sm">
                                        <a href="{{ path('app_ticket_show', {'organizationSlug': currentOrganization.slug, 'ticketId': ticket.id}) }}" 
                                           class="btn btn-outline-primary" title="View">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        {% if is_granted('TICKET_EDIT', ticket) %}
                                            <a href="{{ path('app_ticket_edit', {'organizationSlug': currentOrganization.slug, 'ticketId': ticket.id}) }}" 
                                               class="btn btn-outline-secondary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        {# Empty State #}
        <div class="card text-center py-5">
            <div class="card-body">
                <i class="bi bi-inbox" style="font-size: 4rem; color: var(--gruvbox-gray);"></i>
                <h3 class="mt-3 mb-2">No tickets yet</h3>
                <p class="text-muted mb-4">Get started by creating your first ticket.</p>
                <a href="{{ path('app_ticket_new', {'organizationSlug': currentOrganization.slug}) }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i>
                    Create First Ticket
                </a>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
