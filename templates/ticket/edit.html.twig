{% extends 'base.html.twig' %}

{% block title %}Edit Ticket #{{ ticket.id }}{% endblock %}

{% block body %}
<div class="container py-4">
    {# Back Button #}
    <div class="mb-3">
        <a href="{{ path('app_ticket_show', {'organizationSlug': currentOrganization.slug, 'ticketId': ticket.id}) }}" class="btn btn-sm btn-outline-secondary">
            <i class="bi bi-arrow-left"></i>
            Back to Ticket
        </a>
    </div>

    {# Page Header #}
    <div class="mb-4">
        <h1>
            <i class="bi bi-pencil text-primary"></i>
            Edit Ticket
            <span class="badge bg-primary">#{{ ticket.id }}</span>
        </h1>
        <p class="text-muted mb-0">{{ ticket.title }}</p>
    </div>

    {# Form Card #}
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="bi bi-file-text"></i>
                Ticket Information
            </h5>
        </div>
        <div class="card-body">
            {{ include('ticket/_form.html.twig', {'button_label': 'Update Ticket'}) }}
        </div>
    </div>

    {# Existing Attachments #}
    {% if ticket.attachments|length > 0 %}
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-paperclip"></i>
                    Current Attachments ({{ ticket.attachments|length }})
                </h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    {% for attachment in ticket.attachments %}
                        <div class="col-md-3">
                            <div class="card h-100 attachment-card">
                                {# Delete Button #}
                                <div class="position-absolute top-0 end-0 p-2 z-1">
                                    <form method="post" action="{{ path('app_attachment_delete', {
                                        'organizationSlug': currentOrganization.slug,
                                        'ticketId': ticket.id,
                                        'attachmentId': attachment.id
                                    }) }}" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete-attachment-' ~ attachment.id) }}">
                                        <button type="submit" class="btn btn-sm btn-danger" 
                                                onclick="return confirm('Are you sure you want to delete this attachment?')" 
                                                title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>

                                {# Preview #}
                                {% if attachment.isImage %}
                                    <a href="{{ path('app_attachment_download', {
                                        'organizationSlug': currentOrganization.slug,
                                        'ticketId': ticket.id,
                                        'attachmentId': attachment.id
                                    }) }}" target="_blank" class="overflow-hidden">
                                        <img src="{{ path('app_attachment_download', {
                                            'organizationSlug': currentOrganization.slug,
                                            'ticketId': ticket.id,
                                            'attachmentId': attachment.id
                                        }) }}" class="card-img-top object-fit-cover" alt="{{ attachment.filename }}" style="height: 150px;">
                                    </a>
                                {% else %}
                                    <div class="card-body text-center bg-light d-flex align-items-center justify-content-center" style="height: 150px;">
                                        {% if attachment.mimeType starts with 'application/pdf' %}
                                            <i class="bi bi-file-pdf fs-1 text-danger"></i>
                                        {% elseif attachment.mimeType starts with 'application/vnd.ms-excel' or attachment.mimeType starts with 'application/vnd.openxmlformats-officedocument.spreadsheetml' %}
                                            <i class="bi bi-file-excel fs-1 text-success"></i>
                                        {% elseif attachment.mimeType starts with 'application/msword' or attachment.mimeType starts with 'application/vnd.openxmlformats-officedocument.wordprocessingml' %}
                                            <i class="bi bi-file-word fs-1 text-primary"></i>
                                        {% elseif attachment.mimeType starts with 'application/zip' or attachment.mimeType starts with 'application/x-' %}
                                            <i class="bi bi-file-zip fs-1 text-secondary"></i>
                                        {% elseif attachment.mimeType starts with 'text/' %}
                                            <i class="bi bi-file-text fs-1 text-info"></i>
                                        {% else %}
                                            <i class="bi bi-file-earmark fs-1 text-secondary"></i>
                                        {% endif %}
                                    </div>
                                {% endif %}

                                {# File Info #}
                                <div class="card-body p-2">
                                    <p class="card-text small text-truncate mb-0" title="{{ attachment.filename }}">
                                        <strong>{{ attachment.filename }}</strong>
                                    </p>
                                    <p class="card-text mb-0">
                                        <small class="text-muted">{{ attachment.formattedSize }}</small>
                                    </p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}

    {# Actions #}
    <div class="d-flex gap-2 mb-4">
        <a href="{{ path('app_ticket_show', {'organizationSlug': currentOrganization.slug, 'ticketId': ticket.id}) }}" class="btn btn-secondary">
            <i class="bi bi-eye"></i>
            View Ticket
        </a>
        <a href="{{ path('app_ticket_index', {'organizationSlug': currentOrganization.slug}) }}" class="btn btn-outline-secondary">
            <i class="bi bi-list"></i>
            All Tickets
        </a>
        {% if is_granted('TICKET_DELETE', ticket) %}
            <button type="button" class="btn btn-outline-danger ms-auto" data-bs-toggle="modal" data-bs-target="#deleteModal">
                <i class="bi bi-trash"></i>
                Delete Ticket
            </button>
        {% endif %}
    </div>
</div>

{# Delete Modal #}
{% if is_granted('TICKET_DELETE', ticket) %}
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Ticket</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this ticket?</p>
                <p class="text-danger mb-0">
                    <i class="bi bi-exclamation-triangle"></i>
                    This action cannot be undone.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                {{ include('ticket/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endif %}
{% endblock %}
