{#
    Comment list partial
    Expected variables:
    - ticket: the Ticket object
#}

{% if ticket.comments|length > 0 %}
    <div class="comments-list">
        {% for comment in ticket.comments %}
            <div class="card comment-card mb-3">
                <div class="card-body">
                    {# Comment Header #}
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div class="comment-meta">
                            <div class="d-flex align-items-center gap-2 mb-1">
                                <i class="bi bi-person-circle text-primary"></i>
                                <strong>{{ comment.author.name }}</strong>
                                <span class="text-muted">â€¢</span>
                                <small class="text-muted">
                                    <i class="bi bi-clock"></i>
                                    {{ comment.createdAt|date('M d, Y H:i') }}
                                </small>
                            </div>
                            {% if comment.updatedAt > comment.createdAt %}
                                <small class="text-muted fst-italic">
                                    <i class="bi bi-pencil-square"></i>
                                    Edited {{ comment.updatedAt|date('M d, Y H:i') }}
                                </small>
                            {% endif %}
                        </div>

                        {# Actions #}
                        <div class="btn-group btn-group-sm">
                            {% if is_granted('COMMENT_EDIT', comment) %}
                                <a href="{{ path('app_comment_edit', {
                                    'organizationSlug': currentOrganization.slug,
                                    'ticketId': ticket.id,
                                    'commentId': comment.id
                                }) }}" class="btn btn-outline-secondary" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            {% endif %}
                            
                            {% if is_granted('COMMENT_DELETE', comment) %}
                                <button type="button" class="btn btn-outline-danger" 
                                        data-bs-toggle="modal" 
                                        data-bs-target="#deleteCommentModal{{ comment.id }}"
                                        title="Delete">
                                    <i class="bi bi-trash"></i>
                                </button>
                            {% endif %}
                        </div>
                    </div>

                    {# Comment Content #}
                    <div class="comment-content">
                        {{ comment.content|nl2br }}
                    </div>

                    {# Comment Attachments #}
                    {% if comment.attachments|length > 0 %}
                        <div class="comment-attachments mt-3 pt-3 border-top">
                            <h6 class="text-muted mb-3">
                                <i class="bi bi-paperclip"></i>
                                Attachments ({{ comment.attachments|length }})
                            </h6>
                            <div class="row g-3">
                                {% for attachment in comment.attachments %}
                                    {% include 'attachment/_attachment_card.html.twig' with {
                                        'attachment': attachment,
                                        'ticketId': ticket.id,
                                        'commentId': comment.id,
                                        'size': 'small'
                                    } %}
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>

            {# Delete Modal #}
            {% if is_granted('COMMENT_DELETE', comment) %}
            <div class="modal fade" id="deleteCommentModal{{ comment.id }}" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Delete Comment</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <p>Are you sure you want to delete this comment?</p>
                            <p class="text-danger mb-0">
                                <i class="bi bi-exclamation-triangle"></i>
                                This action cannot be undone.
                            </p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <form method="post" action="{{ path('app_comment_delete', {
                                'organizationSlug': currentOrganization.slug,
                                'ticketId': ticket.id,
                                'commentId': comment.id
                            }) }}" class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete-comment-' ~ comment.id) }}">
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash"></i>
                                    Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
        {% endfor %}
    </div>
{% else %}
    <div class="text-center py-4">
        <i class="bi bi-chat-left-text text-muted" style="font-size: 3rem;"></i>
        <p class="text-muted mt-2 mb-0">No comments yet. Be the first to comment!</p>
    </div>
{% endif %}

<style>
    .comment-card {
        border-left: 3px solid var(--gruvbox-blue);
        transition: box-shadow 0.2s ease;
    }

    .comment-card:hover {
        box-shadow: var(--bs-box-shadow);
    }

    .comment-meta strong {
        color: var(--gruvbox-fg);
    }

    .comment-content {
        color: var(--gruvbox-fg);
        line-height: 1.6;
        padding: 0.5rem 0;
    }
</style>
