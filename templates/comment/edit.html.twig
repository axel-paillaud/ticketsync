{% extends 'base.html.twig' %}

{% block title %}{{ 'Edit Comment'|trans }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>{{ 'Edit Comment'|trans }}</h1>

    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">{{ 'Ticket'|trans }}: {{ ticket.title }}</h5>
            <p class="text-muted">{{ 'Posted on'|trans }} {{ comment.createdAt|date('M d, Y H:i') }}</p>
        </div>
    </div>

    {# Edit form #}
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">{{ 'Edit Comment'|trans }}</h5>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.content, 'Your Comment'|trans, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': 6}}) }}
                    {{ form_errors(form.content) }}
                </div>

                <div class="mb-3">
                    <div class="attachment-upload-zone">
                        {{ form_label(form.attachments, 'Attachments (optional)'|trans, {'label_attr': {'class': 'form-label'}}) }}
                        <div class="upload-info mb-2">
                            <small class="text-muted">
                                <i class="bi bi-info-circle"></i>
                                {{ 'Supported: Images, PDF, Word, Excel, Text, Archives | Max 10MB per file'|trans }}
                            </small>
                        </div>
                        {{ form_widget(form.attachments, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.attachments) }}
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle me-1"></i>
                        {{ 'Save Changes'|trans }}
                    </button>
                    <a href="{{ path('app_ticket_show', {'organizationSlug': currentOrganization.slug, 'ticketId': ticket.id}) }}" class="btn btn-secondary">
                        <i class="bi bi-x-circle me-1"></i>
                        {{ 'Cancel'|trans }}
                    </a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>

    {# Display existing attachments #}
    {% if comment.attachments|length > 0 %}
        <div class="card mt-4">
            <div class="card-header">
                <h5 class="mb-0">{{ 'Current Attachments'|trans }} ({{ comment.attachments|length }})</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    {% for attachment in comment.attachments %}
                        {% include 'attachment/_attachment_card.html.twig' with {
                            'attachment': attachment,
                            'ticketId': ticket.id,
                            'commentId': comment.id,
                            'size': 'small'
                        } %}
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
