{% extends 'base.html.twig' %}

{% block title %}Modifier le commentaire{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Modifier le commentaire</h1>

    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">Ticket: {{ ticket.title }}</h5>
            <p class="text-muted">Posté le {{ comment.createdAt|date('d/m/Y à H:i') }}</p>
        </div>
    </div>

    {# Edit form #}
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Modifier le commentaire</h5>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                {{ form_row(form.content) }}
                {{ form_row(form.attachments) }}

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Sauvegarder</button>
                    <a href="{{ path('app_ticket_show', {'organizationSlug': currentOrganization.slug, 'id': ticket.id}) }}" class="btn btn-secondary">Annuler</a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>

    {# Display existing attachments #}
    {% if comment.attachments|length > 0 %}
        <div class="card mt-4">
            <div class="card-header">
                <h5 class="mb-0">Pièces jointes actuelles ({{ comment.attachments|length }})</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    {% for attachment in comment.attachments %}
                        {% include 'attachment/_attachment_card.html.twig' with {
                            'attachment': attachment,
                            'ticketId': ticket.id,
                            'commentId': comment.id,
                            'size': 'small'
                        } %}
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
