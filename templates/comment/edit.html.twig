{% extends 'base.html.twig' %}

{% block title %}Modifier le commentaire{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Modifier le commentaire</h1>

    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">Ticket: {{ ticket.title }}</h5>
            <p class="text-muted">Posté le {{ comment.createdAt|date('d/m/Y à H:i') }}</p>
        </div>
    </div>

    {{ form_start(form) }}
        {{ form_row(form.content) }}

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Sauvegarder</button>
            <a href="{{ path('app_ticket_show', {'id': ticket.id}) }}" class="btn btn-secondary">Annuler</a>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
