{#
    Comment form partial
    Expected variables:
    - commentForm: the comment form object
#}

{{ form_start(commentForm, {'attr': {'class': 'comment-form'}}) }}

<div class="row g-3">
    {# Content #}
    <div class="col-12">
        {{ form_label(commentForm.content, 'Your Comment', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(commentForm.content, {'attr': {'class': 'form-control comment-textarea', 'rows': 4, 'placeholder': 'Write your comment here...'}}) }}
        {{ form_errors(commentForm.content) }}
    </div>

    {# Attachments #}
    <div class="col-12">
        <div class="attachment-upload-zone">
            {{ form_label(commentForm.attachments, 'Attachments (optional)', {'label_attr': {'class': 'form-label'}}) }}
            <div class="upload-info mb-2">
                <small class="text-muted">
                    <i class="bi bi-info-circle"></i>
                    Supported: Images, PDF, Word, Excel, Text, Archives | Max 10MB per file
                </small>
            </div>
            {{ form_widget(commentForm.attachments, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(commentForm.attachments) }}
        </div>
    </div>

    {# Submit Button #}
    <div class="col-12">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-send me-1"></i>
            Post Comment
        </button>
    </div>
</div>

{{ form_end(commentForm) }}
