{% extends 'emails/_layout.html.twig' %}

{% block title %}{{ 'Monthly threshold exceeded'|trans }}{% endblock %}

{% block content %}
    <p class="greeting">{{ 'Hello'|trans }} <strong>{{ recipient.firstName }}</strong>,</p>

    <p>{{ 'Your monthly time entry threshold has been exceeded for'|trans }} <strong>{{ organization.name }}</strong>.</p>

    <div class="info-box">
        <h2>{{ '⚠️ Threshold Alert'|trans }}</h2>
        <p><strong>{{ 'Organization:'|trans }}</strong> {{ organization.name }}</p>
        <p><strong>{{ 'Your threshold:'|trans }}</strong> {{ threshold|number_format(2, '.', ',') }} €</p>
        <p><strong>{{ 'Current monthly total:'|trans }}</strong> <span style="color: #d9534f; font-weight: bold;">{{ currentTotal|number_format(2, '.', ',') }} €</span></p>
        <p><strong>{{ 'Exceeded by:'|trans }}</strong> {{ (currentTotal - threshold)|number_format(2, '.', ',') }} €</p>
    </div>

    <p>{{ 'This alert is sent once when your monthly billing total exceeds your configured threshold.'|trans }}</p>

    <p>{{ 'You can adjust your alert settings in your profile.'|trans }}</p>

    <a href="{{ url('app_user_profile') }}" class="button">
        {{ 'Go to Profile'|trans }}
    </a>
{% endblock %}
