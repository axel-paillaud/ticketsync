{% extends 'base.html.twig' %}

{% block title %}Set Your Password - TicketSync{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h2 class="mb-0">
                        <i class="bi bi-envelope-check"></i>
                        Welcome to TicketSync
                    </h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-info mb-4">
                        <i class="bi bi-info-circle"></i>
                        Hello <strong>{{ user.name }}</strong>, please set your password to complete your account setup.
                    </div>

                    <div class="mb-4">
                        <h5>Your Account Details:</h5>
                        <ul class="list-unstyled">
                            <li><strong>Email:</strong> {{ user.email }}</li>
                            {% if user.organization %}
                                <li><strong>Organization:</strong> {{ user.organization.name }}</li>
                            {% endif %}
                            <li><strong>Role:</strong>
                                {% if 'ROLE_ADMIN' in user.roles %}
                                    <span class="badge bg-danger">Administrator</span>
                                {% else %}
                                    <span class="badge bg-primary">User</span>
                                {% endif %}
                            </li>
                        </ul>
                    </div>

                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_row(form.password.first) }}
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.password.second) }}
                        </div>

                        <div class="alert alert-warning">
                            <i class="bi bi-shield-lock"></i>
                            <strong>Password Requirements:</strong>
                            <ul class="mb-0 mt-2">
                                <li>Minimum 6 characters</li>
                                <li>Use a strong, unique password</li>
                            </ul>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle"></i>
                                Set Password & Continue
                            </button>
                        </div>
                    {{ form_end(form) }}

                    <div class="text-center mt-3">
                        <small class="text-muted">
                            This invitation expires on {{ invitation.expiresAt|date('F d, Y') }} at {{ invitation.expiresAt|date('H:i') }}
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
