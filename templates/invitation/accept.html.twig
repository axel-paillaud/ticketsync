{% extends 'base.html.twig' %}

{% block title %}{{ 'Set Your Password'|trans }} - TicketSync{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h2 class="mb-0">
                        <i class="bi bi-envelope-check"></i>
                        {{ 'Welcome to TicketSync'|trans }}
                    </h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-info mb-4">
                        <i class="bi bi-info-circle"></i>
                        {{ 'Hello'|trans }} <strong>{{ user.name }}</strong>, {{ 'please set your password to complete your account setup.'|trans }}
                    </div>

                    <div class="mb-4">
                        <h5>Your Account Details:</h5>
                        <ul class="list-unstyled">
                            <li><strong>{{ 'Email:'|trans }}</strong> {{ user.email }}</li>
                            {% if user.organization %}
                                <li><strong>{{ 'Organization:'|trans }}</strong> {{ user.organization.name }}</li>
                            {% endif %}
                            <li><strong>{{ 'Role:'|trans }}</strong>
                                {% if 'ROLE_ADMIN' in user.roles %}
                                    <span class="badge bg-danger">{{ 'Administrator'|trans }}</span>
                                {% else %}
                                    <span class="badge bg-primary">{{ 'User'|trans }}</span>
                                {% endif %}
                            </li>
                        </ul>
                    </div>

                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_row(form.password.first) }}
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.password.second) }}
                        </div>

                        <div class="alert alert-warning">
                            <i class="bi bi-shield-lock"></i>
                            <strong>{{ 'Password Requirements:'|trans }}</strong>
                            <ul class="mb-0 mt-2">
                                <li>{{ 'Minimum 6 characters'|trans }}</li>
                                <li>{{ 'Use a strong, unique password'|trans }}</li>
                            </ul>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle"></i>
                                {{ 'Set Password & Continue'|trans }}
                            </button>
                        </div>
                    {{ form_end(form) }}

                    <div class="text-center mt-3">
                        <small class="text-muted">
                            {{ 'This invitation expires on {date} at {time}'|trans({
                                'date': invitation.expiresAt|date('F d, Y'),
                                'time': invitation.expiresAt|date('H:i'),
                            }) }}
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
