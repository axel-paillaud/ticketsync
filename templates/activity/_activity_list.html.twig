{#
    Activity list partial
    Expected variables:
    - ticket: the Ticket object
#}

{% if ticket.activities|length > 0 %}
    <div class="activities-list">
        {% for activity in ticket.activities %}

            <div class="card activity-entry-card mb-3">
                <div class="card-body">
                    {# Activity Header #}
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div class="activity-entry-meta">
                            <div class="d-flex align-items-center gap-2 mb-1">
                                <i class="bi bi-activity text-primary"></i>
                                <strong>{{ activity.workDate|date('M d, Y') }}</strong>
                            </div>
                            <small class="text-muted">
                                <i class="bi bi-person-circle"></i>
                                {{ 'Logged by'|trans }} {{ activity.createdBy.name }}
                                {{ 'on'|trans }} {{ activity.createdAt|date('M d, Y H:i') }}
                            </small>
                        </div>

                        {# Actions (Admin only) #}
                        {% if is_granted('ROLE_ADMIN') %}
                            <div class="btn-group btn-group-sm">
                                {% if is_granted('ACTIVITY_EDIT', activity) %}
                                    <a href="{{ path('app_activity_edit', {
                                        'organizationSlug': ticket.organization.slug,
                                        'ticketId': ticket.id,
                                        'activityId': activity.id
                                    }) }}" class="btn btn-outline-secondary" title="{{ 'Edit'|trans }}">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                {% endif %}

                                {% if is_granted('ACTIVITY_DELETE', activity) %}
                                    <button type="button" class="btn btn-outline-danger"
                                            data-bs-toggle="modal"
                                            data-bs-target="#deleteTimeEntryModal{{ activity.id }}"
                                            title="{{ 'Delete'|trans }}">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                {% endif %}
                            </div>
                        {% endif %}
                    </div>

                    {# Activity Description #}
                    <div class="activity-entry-description">
                        {{ activity.description|markdown_to_html|raw }}
                    </div>
                </div>
            </div>

            {# Delete Modal #}
            {% if is_granted('ACTIVITY_DELETE', activity) %}
            <div class="modal fade" id="deleteTimeEntryModal{{ activity.id }}" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">{{ 'Delete Activity'|trans }}</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <p>{{ 'Are you sure you want to delete this activity?'|trans }}</p>
                            <p class="text-danger mb-0">
                                <i class="bi bi-exclamation-triangle"></i>
                                {{ 'This action cannot be undone.'|trans }}
                            </p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ 'Cancel'|trans }}</button>
                            <form method="post" action="{{ path('app_activity_delete', {
                                'organizationSlug': ticket.organization.slug,
                                'ticketId': ticket.id,
                                'activityId': activity.id
                            }) }}" class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete-activity-entry-' ~ activity.id) }}">
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash"></i>
                                    {{ 'Delete'|trans }}
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
        {% endfor %}
    </div>
{% else %}
    <div class="text-center py-4">
        <i class="bi bi-activity text-muted" style="font-size: 3rem;"></i>
        <p class="text-muted mt-2 mb-0">{{ 'No activities yet.'|trans }}</p>
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_activity_new', {
                'organizationSlug': ticket.organization.slug,
                'ticketId': ticket.id
            }) }}" class="btn btn-sm btn-primary mt-2">
                <i class="bi bi-plus-circle"></i>
                {{ 'Add Activity'|trans }}
            </a>
        {% endif %}
    </div>
{% endif %}
