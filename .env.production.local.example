###> symfony/framework-bundle ###
APP_ENV=prod
APP_SECRET=CHANGE_ME_TO_RANDOM_STRING_AT_LEAST_32_CHARS
APP_DEBUG=0
###< symfony/framework-bundle ###

###> symfony/routing ###
# URL de votre application en production
DEFAULT_URI=https://your-domain.com
###< symfony/routing ###

###> doctrine/doctrine-bundle ###
# PostgreSQL (recommandé pour la production)
DATABASE_URL="postgresql://db_user:db_password@127.0.0.1:5432/ticketsync?serverVersion=16&charset=utf8"

# OU MySQL/MariaDB
# DATABASE_URL="mysql://db_user:db_password@127.0.0.1:3306/ticketsync?serverVersion=8.0.32&charset=utf8mb4"
###< doctrine/doctrine-bundle ###

###> symfony/messenger ###
MESSENGER_TRANSPORT_DSN=doctrine://default?auto_setup=0
###< symfony/messenger ###

###> symfony/mailer ###
# Configuration SMTP pour l'envoi d'emails (exemple avec Gmail)
# MAILER_DSN=smtp://username:password@smtp.gmail.com:587

# Exemple avec un serveur SMTP générique
# MAILER_DSN=smtp://user:pass@smtp.example.com:587

# Exemple avec Mailgun
# MAILER_DSN=mailgun://KEY:DOMAIN@default?region=us

# Exemple avec SendGrid
# MAILER_DSN=sendgrid://KEY@default
###< symfony/mailer ###
